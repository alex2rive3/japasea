# Archivo de ejemplo de variables de entorno para el servidor Japasea
# Copia este archivo como .env y configura los valores apropiados

# Configuración del servidor
NODE_ENV=development
PORT=3001

# Configuración de MongoDB
MONGODB_URI=mongodb://admin:adminpassword@localhost:27017/japasea_db?authSource=admin

# Configuración JWT
JWT_SECRET=japasea_jwt_secret_key_2024_dev
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Configuración de bcrypt
BCRYPT_SALT_ROUNDS=12

# Configuración CORS
CORS_ORIGIN=http://localhost:5173

# Configuración de rate limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Configuración de email (opcional para producción)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Configuración de Google AI (opcional)
GOOGLE_AI_API_KEY=your-google-ai-api-key
