# Server Configuration
PORT=3001
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/japasea_db
# Para MongoDB Atlas, usa algo como:
# MONGODB_URI=mongodb+srv://usuario:password@cluster.mongodb.net/japasea_db

# JWT Configuration
JWT_SECRET=japasea_jwt_secret_key_2024_change_this_in_production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Password Encryption
BCRYPT_SALT_ROUNDS=12

# Rate Limiting Configuration
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=5

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Google Generative AI (for chat functionality)
GOOGLE_API_KEY=your_google_api_key_here
